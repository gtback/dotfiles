  // These settings apply just in this repo, not anywhere else
  "files.associations": {
    "**/brewfile/**/*Brewfile*": "ruby",
    "**/git/config*": "ini",
    "git/ignore": "gitignore",
    "**/vim/*": "vimrc",
    // These are scripts to calcuate differences between what's configured and
    // what's installed, not diff/patch files.
    "**/bin/*.diff": "shellscript"
  },
  "shellcheck.ignorePatterns": {
    "zsh/*": true
  },
  "shellformat.flag": "-bn"
}
