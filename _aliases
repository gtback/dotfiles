alias e=vim
alias pt=py.test
alias vg=vagrant
alias wo=workon

alias today="date +%F"
alias now="date +%FT%T"

alias gdmb="git dmb"
alias gpom="git pom"
alias gssp="git ssp"
alias lsvirtualenv="lsvirtualenv -b"
alias pyws="sed -i -e 's/^[ \r\t]*$//'"
alias version="echo -n \"VirtualBox \" && VBoxManage --version && vagrant --version && git --version && tmux -V &&  vim --version | head -1"

alias vagrant-ids="grep '.*' ~/code/**/.vagrant/machines/*/virtualbox/index_uuid"
alias zreload=". ~/.zshrc && echo 'ZSH config reloaded from ~/.zshrc'"
alias lspath='f(){echo ${PATH} | tr ":" "\n"};f'
alias proxies="env | grep -i proxy"
alias pip-rm-all="pip freeze | sed 's/^-e.*egg=//' | xargs pip uninstall -y"
function pip-upgrade-all {
  pip list --outdated --disable-pip-version-check | awk 'NR>2 {print $1 "==" $3}' | xargs pip install
}

alias git=hub
