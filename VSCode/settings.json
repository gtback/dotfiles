{
  "[css][html][json][jsonc][typescript]": {
    "editor.tabSize": 2
  },
  "[dockerfile]": {
    "editor.defaultFormatter": "ms-azuretools.vscode-docker"
  },
  "[html]": {
    "editor.defaultFormatter": "vscode.html-language-features"
  },
  "[javascript][typescript]": {
    "editor.defaultFormatter": "vscode.typescript-language-features"
  },
  "[json][jsonc]": {
    "editor.defaultFormatter": "vscode.json-language-features"
  },
  "[markdown][mdx]": {
    // Markdown uses two spaces at the end of a line for a manual line break
    "files.trimTrailingWhitespace": false
  },
  "[python]": {
    "editor.defaultFormatter": "ms-python.black-formatter",
    // Black does not support the range formatting
    "editor.formatOnSaveMode": "file",
    "editor.formatOnType": true,
    "editor.rulers": [
      88
    ]
  },
  "[ruby][html]": {
    "editor.formatOnSave": false
  },
  "[rust]": {
    // rustfmt does not support range formatting
    "editor.formatOnSaveMode": "file"
  },
  "[terraform]": {
    // https://github.com/hashicorp/vscode-terraform/issues/542
    "editor.defaultFormatter": "hashicorp.terraform",
    "editor.formatOnSaveMode": "file"
  },
  "[xml]": {
    "editor.defaultFormatter": "fabianlauer.vs-code-xml-format"
  },
  "breadcrumbs.enabled": true,
  "color-highlight.markerType": "dot-after",
  "debug.toolBarLocation": "docked",
  "diffEditor.ignoreTrimWhitespace": false,
  "diffEditor.renderSideBySide": true,
  "editor.fontLigatures": false,
  "editor.fontSize": 14,
  "editor.formatOnPaste": true,
  "editor.formatOnSave": true,
  "editor.formatOnSaveMode": "modifications",
  "editor.minimap.enabled": false,
  "editor.renderWhitespace": "all",
  "editor.rulers": [
    80,
    120
  ],
  "editor.suggest.localityBonus": true,
  "editor.suggestSelection": "first",
  "editor.tabCompletion": "on",
  "emmet.triggerExpansionOnTab": true,
  "explorer.confirmDelete": false,
  "explorer.confirmDragAndDrop": false,
  "extensions.ignoreRecommendations": true,
  "files.associations": {
    "**/.aws/config": "ini",
    "**/.aws/credentials": "ini",
    "**/.okta-aws": "ini",
    "_zshrc": "shellscript",
    "dep5": "debian-copyright"
  },
  "files.exclude": {
    "**/.classpath": true,
    "**/.factorypath": true,
    "**/.project": true,
    "**/.settings": true,
    "**/__pycache__": true
  },
  "files.insertFinalNewline": true,
  "files.trimFinalNewlines": true,
  "files.trimTrailingWhitespace": true,
  "git.alwaysShowStagedChangesResourceGroup": true,
  "git.confirmSync": false,
  "git.openDiffOnClick": false,
  "git.openRepositoryInParentFolders": "never",
  "git.untrackedChanges": "separate",
  "gitlens.codeLens.enabled": false,
  "gitlens.defaultDateFormat": null,
  "gitlens.hovers.currentLine.over": "line",
  "go.toolsManagement.autoUpdate": true,
  "jupyter.interactiveWindow.textEditor.executeSelection": false,
  "notebook.cellToolbarLocation": {
    "default": "right",
    "jupyter-notebook": "left"
  },
  "problems.showCurrentInStatus": true,
  "python.formatting.provider": "black",
  "python.languageServer": "Pylance",
  "python.venvPath": "~/.virtualenvs",
  "redhat.telemetry.enabled": false,
  "ruby.codeCompletion": "rcodetools",
  "ruby.format": "rubocop",
  "ruby.intellisense": "rubyLocate",
  "ruby.useBundler": true,
  "ruby.useLanguageServer": true,
  "rust-client.rlsPath": "$ASDF_DATA_DIR/shims/rls",
  "rust-client.rustupPath": "$ASDF_DATA_DIR/shims/rustup",
  "rust.rustfmt_path": "$ASDF_DATA_DIR/shims/rustfmt",
  "shellcheck.customArgs": [
    "-x"
  ],
  "spellright.documentTypes": [
    "markdown"
  ],
  "spellright.notificationClass": "information",
  "svn.path": "/usr/local/bin/svn",
  "terminal.integrated.defaultLocation": "editor",
  "terminal.integrated.fontFamily": "Inconsolata Nerd Font",
  "terminal.integrated.fontSize": 16,
  "terminal.integrated.scrollback": 10000,
  "typescript.updateImportsOnFileMove.enabled": "always",
  "vs-kubernetes": {
    "vs-kubernetes.draft-path.mac": "/usr/local/bin/draft",
    "vs-kubernetes.helm-path.mac": "/usr/local/bin/helm",
    "vs-kubernetes.kubectl-path.mac": "/usr/local/bin/kubectl",
    "vs-kubernetes.minikube-path.mac": "/usr/local/bin/minikube",
    "vscode-kubernetes.minikube-path.mac": "/Users/gtback/.vs-kubernetes/tools/minikube/darwin-amd64/minikube"
  },
  "vsicons.dontShowNewVersionMessage": true,
  "workbench.editor.empty.hint": "hidden",
  "workbench.editor.enablePreviewFromQuickOpen": false,
  "workbench.editor.highlightModifiedTabs": true,
  "workbench.editorAssociations": {
    "*.ipynb": "jupyter-notebook"
  },
  "workbench.iconTheme": "vscode-icons",
  "workbench.list.keyboardNavigation": "filter",
  "workbench.startupEditor": "newUntitledFile",
  "workbench.statusBar.visible": true,
  "yaml.format.enable": false
}
